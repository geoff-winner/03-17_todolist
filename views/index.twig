<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <title>To Do List</title>
    </head>
    <body>
        <center>
        <h1>To Do List Bro</h1>
        <p>Create a new category</p>

        <form action="/categories" method="post">
            <label for="name">Category</label>
            <input id="name" name="name" type="text">

            <button type="submit" class="btn btn-success btn-xs">Addegory</button>
        </form>

        <form action="/tasks" method="post">
            <label for="description">Tasks</label>
            <input id="description" name="description" type="text">

            <button type="submit" class="btn btn-success btn-xs">Addegory</button>
        </form>


        {% if categories is not empty %}
            <p>Here are all your categories:</p>
                {% for category in categories %}
                    <p><a href="/categories/{{ category.getId }}">{{ category.getName }}</a></p>
                {% endfor %}
            {% else %}
                <p>There ain't none.</p>
        {% endif %}
        <form action="/delete_cat" method="post">
            <button type="submit" class=" btn btn-danger btn-xs">Subtractegories</button>
        </form>
        </center>
    </body>
</html>
